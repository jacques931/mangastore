{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/form.css') }}">
{% endblock %}

{% block body %}
    {% from 'components/_form_layout.html.twig' import form_container %}
    {% if form_errors(registrationForm) %}
        <div class="alert alert-danger">
            {{ form_errors(registrationForm) }}
        </div>
    {% endif %}
    {% set form_content %}
        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation registration-form'}}) }}
            <div class="form-section">
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(registrationForm.email, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Email'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Mot de passe'
                            }
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        {{ form_row(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(registrationForm.first_name, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        {{ form_row(registrationForm.phone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
                    </div>
                </div>
            </div>

            <div class="form-section mt-4">
                <fieldset class="form-group address-section">
                    <legend><i class="bi bi-geo-alt"></i> Adresse</legend>
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_label(registrationForm.address.address, 'Rue', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.address.address, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Numéro et nom de rue'
                                }
                            }) }}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            {{ form_label(registrationForm.address.code_postal, 'Code Postal', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.address.code_postal, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Code postal'
                                }
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(registrationForm.address.city, 'Ville', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.address.city, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Ville'
                                }
                            }) }}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_label(registrationForm.address.country, 'Pays', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.address.country, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Pays'
                                }
                            }) }}
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="form-section mt-4">
                <div class="checkbox-wrapper">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, "J'accepte les conditions d'utilisation") }}
                </div>
            </div>

            <button type="submit" class="btn btn-primary">S'inscrire</button>

            <div class="form-footer">
                <a href="{{ path('app_login') }}">Déjà inscrit ? Connectez-vous</a>
            </div>
        {{ form_end(registrationForm) }}
    {% endset %}

    {{ form_container('Inscription', form_content) }}
{% endblock %}
