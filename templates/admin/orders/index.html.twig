{% extends 'base.html.twig' %}

{% block title %}Gestion des Commandes{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Gestion des Commandes</h1>
    </div>
    
    <div class="card shadow-sm">
        <div class="card-body">
            {% if orders is empty %}
                <div class="text-center py-4">
                    <p class="text-muted mb-0">Aucune commande n'a été trouvée.</p>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Numéro de commande</th>
                                <th>Client</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Total</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td>{{ order.id }}</td>
                                    <td>{{ order.orderNumber }}</td>
                                    <td>{{ order.customer.email }}</td>
                                    <td>{{ order.datetime|date('d/m/Y H:i') }}</td>
                                    <td>
                                        {% if order.valid %}
                                            <span class="badge bg-success">Validée</span>
                                        {% else %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ order.total }}€</td>
                                    <td class="text-end">
                                        <a href="{{ path('app_admin_orders_show', {'id': order.id}) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> Voir détails
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
